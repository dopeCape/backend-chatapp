    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.8.0",
    "helmet": "^7.0.0",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0",
    "supertest": "^6.3.3",
    "tsc-watch": "^6.0.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@briandlee/smuggler": "^0.2.2",

{
  "version": 2,
  "builds": [{ "src": "src/**/*.ts", "use": "@now/node" }],
  "routes": [{ "src": "/(.*)*", "dest": "dist/index.js" }],
  "build": {
    "env": {
      "PRISMA_GENERATE": "npm run prisma:generate"
    },
    "functions": {
      "src/**/*.js": {
        "runtime": "@now/node@1.15.0",
        "memory": 1024
      }
    }
  }
}
